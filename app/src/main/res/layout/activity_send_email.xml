<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SendEmailActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:textColorHint="#304ffe"
        android:labelFor="@+id/emailAddr">

        <com.google.android.material.textfield.TextInputEditText android:id="@+id/emailAddr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:hint="email address"
            android:textSize="14pt"
            android:inputType="textEmailAddress"
            android:textColor="#304ffe"
            android:textAlignment="center" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:textColorHint="#304ffe"
        android:labelFor="@+id/carbonCopies">

        <com.google.android.material.textfield.TextInputEditText android:id="@+id/carbonCopies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:hint="cc"
            android:textSize="14pt"
            android:inputType="textEmailAddress"
            android:textColor="#304ffe"
            android:textAlignment="center" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:textColorHint="#304ffe"
        android:labelFor="@+id/subject">

        <com.google.android.material.textfield.TextInputEditText android:id="@+id/subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:hint="subject"
            android:textSize="14pt"
            android:inputType="textEmailSubject"
            android:textColor="#304ffe"
            android:textAlignment="center" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:textColorHint="#304ffe"
        android:labelFor="@+id/emailText">

        <com.google.android.material.textfield.TextInputEditText android:id="@+id/emailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:hint="email text"
            android:textSize="14pt"
            android:inputType="text"
            android:textColor="#304ffe"
            android:textAlignment="center" />

        <com.google.android.material.button.MaterialButton android:id="@+id/sendEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Email"
            android:textSize="14pt"
            style="@style/Widget.AppCompat.Button.Borderless" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>